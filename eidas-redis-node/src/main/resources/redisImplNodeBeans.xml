<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="redisConfig" class="no.idporten.eidas.redis.cache.RedisConfig">
        <property name="redisPassword" value=""/>
        <property name="redisHost" value = "localhost"/>
        <property name="redisPort" value = "6400"/>
    </bean>


    <bean id="springServiceCMapAntiReplayProviderImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="antiReplayCacheService"/>
    </bean>

    <bean id="springConnectorCMapAntiReplayProviderImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="antiReplayCacheConnector"/>
    </bean>
    <bean id="springConnectorCMapCorProviderImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="connectorRequestCorrelationCacheService"/>
    </bean>
    <bean id="springServiceCMapCorProviderImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="proxyServiceRequestCorrelationCacheService"/>
    </bean>
    <bean id="springConnectorCMapspecificLightCorProviderImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="specificConnectorLtRequestCorrelationCacheService"/>
    </bean>
    <bean id="connectorFlowIdCacheImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="connectorFlowIdCacheService"/>
    </bean>
    <bean id="proxyServiceFlowIdCacheImpl" class="no.idporten.eidas.redis.cache.RedisCache">
        <property name="cachePrefix" value="proxyServiceFlowIdCacheService"/>
    </bean>


    <!--production -->
    <bean id="metadataCacheImpl" class="eu.eidas.auth.cache.metadata.DistributedMetadataCaching" lazy-init="true">
        <property name="igniteInstanceInitializer" ref="eidasIgniteInstanceInitializerNode"/>
        <property name="cacheName" value="eidasmetadata"/>
    </bean>

</beans>